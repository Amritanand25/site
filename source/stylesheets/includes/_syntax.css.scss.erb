<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

pre {
    padding: 1.5em;
    overflow: auto;
    background-color: $light-gray;
    border-radius: 3px;

    code, code.highlight {
        font-family: $monospace-font-family;
        font-size: 12px;
        line-height: 20px;
        background: none;
        display: block;

        &::before,
        &::after {
            content: '';
        }
    }
}

code {
    padding: 0;
    padding-top: 0.2em;
    padding-bottom: 0.2em;
    margin: 0;
    background-color: $medium-gray;
    border-radius: 3px;
    font-size: 12px;

    &::before,
    &::after {
        letter-spacing: -0.2em;
        content: "\00a0"
    }
}
