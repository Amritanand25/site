<% wrap_layout :layout do %>
  <aside>
    <nav>
      <ul id="legal-menu">
        <li class="heading">
          <%= current_resource.data.title %>
        </li>
        <a href="" id="legal-menu-button">
          <i class="fa fa-plus closed"></i>
          <i class="fa fa-remove open"></i>
        </a>

        <% sub_pages("legal").each do |resource| %>
          <li>
            <%= link_to resource.data.title, resource.url %>
          </li>
        <% end %>
      </ul>
    </nav>
  </aside>
  <article>
    <h2><%= current_page.data.title %></h2>
    <%= yield %>
  </article>
<% end %>
