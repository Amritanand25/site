<header>
  <div class="container">

    <div id="tagline">
      <%= image_tag 'home/header-amazing.gif', :width => 641, :height => 230 %>
      <div>
        <p>spin the wheel to discover the delights of Codio</p>
        <%= image_tag 'home/arrow.png', :width => 60 %>
      </div>
    </div>
    <div id="reel">
      <%= image_tag 'reel.png', :width => 420, :height => 420 %>
    </div>

  </div>
</header>

<aside class="home">
    <ul>
      <li class="active"><a href="#productivity">Packing Productivity</a></li>
      <li><a href="#realtime">Real-time Collaboration</a></li>
      <li><a href="#baked">Baked in Brilliance</a></li>
      <li><a href="#sourcecontrol">Source Control</a></li>
      <li><a href="#deployment">Deployment Delights</a></li>
      <li><a href="#annotations">Annotations</a></li>
