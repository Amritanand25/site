<aside>
  <h2>Categories</h2>
  <ol>
    <% blog.tags.each do |tag, articles| %>
      <li><%= link_to "#{tag}", tag_path(tag) %></li>
    <% end %>
  </ol>
  <h2>Latest Posts</h2>
  <ol>
    <% blog.articles[0...10].each do |article| %>
      <li><%= link_to article.title, article %></li>
    <% end %>
    <li><%= link_to "All posts...", "/blog" %></li>
  </ol>
</aside>
