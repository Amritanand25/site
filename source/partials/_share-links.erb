<div class="social">
  <% url = "#{current_page.app.asset_host}#{current_page.url}" %>

  <!-- Twitter -->
  <a href="https://twitter.com/home?status=Check%20out%20this%20post%20<%= url %>%20by%20@CodioHQ"
     class="twitter-share"
     target="_blank"
     alt="Share on Twitter">
  </a>

  <!-- Facebook -->
  <a href="https://www.facebook.com/sharer/sharer.php?u=<%= url %>"
     class="facebook-share"
     target="_blank"
     alt="Share on Facebook">
  </a>

  <!-- Google Plus -->
  <a href="https://plus.google.com/share?url=<%= url %>"
     class="plus-share"
     target="_blank"
     alt="Share on Google Plus">
  </a>
</div>
